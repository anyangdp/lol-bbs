<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE RelativeLayout>
<configuration debug="false">

	<property resource="logback.properties" />

	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>${logger.pattern}</pattern>
			<charset>${logger.charset}</charset>
		</encoder>

		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${logger.home}/%d{yyyy-MM-dd}/${logger.product.name}.%d{yyyy-MM-dd}-%i.log</fileNamePattern>

			<timeBasedFileNamingAndTriggeringPolicy
				class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<maxFileSize>${logger.max.file.size}</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>

			<maxIndex>${logger.max.history}</maxIndex>
		</rollingPolicy>
	</appender>

	<logger name="com.rr" level="DEBUG" />
	<logger name="com.rr.sys.filter.RRCommonsRequestLoggingFilter" level="DEBUG" />
	<logger name="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter" level="INFO" />
	<logger name="org.apache.http.headers" level="ERROR" />
	<logger name="org.apache.http.wire" level="ERROR" />
	<logger name="org.springframework.web.client.RestTemplate" level="DEBUG" />
	<logger name="org.springframework.security.oauth2.client.OAuth2RestTemplate" level="DEBUG" />

	<root level="INFO">
		<appender-ref ref="FILE" />
	</root>

</configuration>